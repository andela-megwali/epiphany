<h3>Log in</h3>
<div>
  <%= form_for(:sign_in, :url => {:action => "login", method: "post"}) do |f| %>
  <div class="form-group">
    <%= f.text_field :username, required: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, required: true %>
  </div>
  <div class="form-group">
    <%= f.submit("Sign In") %>
  </div>
  <% end %>
</div>
